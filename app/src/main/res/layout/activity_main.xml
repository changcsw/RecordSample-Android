<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/helloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hello World!" />

    <Button
        android:id="@+id/mediaRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/switchAudioRecorder"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="-85dp"
        android:text="StartMediaRecorder"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/mediaPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/switchAudioRecorder"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-81dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="StartMediaPlayer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/switchAudioRecorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/helloWorld"
        android:layout_centerVertical="true"
        android:layout_marginTop="-212dp"
        android:text="SwitchAudioRecorder"
        android:textAllCaps="false" />


</RelativeLayout>